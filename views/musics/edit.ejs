<h1>Edit Music</h1>
<form action="/musics/<%= music.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= music.nome %>" required>
    </div>
    <div class="form-group">
        <label for="duracao">Duração:</label>
        <input type="text" class="form-control" id="duracao" name="duracao" value="<%= music.duracao %>" required>
    </div>
    <div class="form-group">
        <label for="genero">Gênero:</label>
        <input type="text" class="form-control" id="genero" name="genero" value="<%= music.genero %>" required>
    </div>
    <div class="form-group">
        <label for="autores">Autores:</label>
        <input type="text" class="form-control" id="autores" name="autores" value="<%= music.autores %>" required>
    </div>
    <div class="form-group">
        <label for="ritmo">Ritmo:</label>
        <input type="text" class="form-control" id="ritmo" name="ritmo" value="<%= music.ritmo %>" required>
    </div>
    <div class="form-group">
        <label for="instru_vocal">Instrumental e Vocal:</label>
        <input type="text" class="form-control" id="instru_vocal" name="instru_vocal" value="<%= music.instru_vocal %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
</form>
