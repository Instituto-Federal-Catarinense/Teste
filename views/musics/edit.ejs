<h1>Edição de Música</h1>
<form action="/musics/<%= music.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= music.nome %>" required>
    </div>
    <div class="form-group">
        <label for="duracao">Duração:</label>
        <input type="time" class="form-control" id="duracao" name="duracao" value="<%= music.duracao %>" required>
    </div>
    <div class="form-group">
        <label for="genero">Gênero:</label>
        <input type="text" class="form-control" id="genero" name="genero" value="<%= music.genero %>" required>
    </div>
    <div class="form-group">
        <label for="autores">Autores:</label>
        <input type="text" class="form-control" id="autores" name="autores" value="<%= music.autores %>" required>
    </div>
    <div class="form-group">
        <label for="ritmo">Ritmo:</label>
        <select class="form-control" id="ritmo" name="ritmo" required>
            <option value="Acelerado" <%= music.ritmo === 'Acelerado' ? 'selected' : '' %>>Acelerado</option>
            <option value="Médio" <%= music.ritmo === 'Médio' ? 'selected' : '' %>>Médio</option>
            <option value="Lento" <%= music.ritmo === 'Lento' ? 'selected' : '' %>>Lento</option>
        </select>
    </div>
    <div class="form-group">
        <label for="instru_vocal">Instrumental e Vocal:</label>
        <select class="form-control" id="instru_vocal" name="instru_vocal" required>
            <option value="instrumental" <%= music.instru_vocal === 'instrumental' ? 'selected' : '' %>>Instrumental</option>
            <option value="vocal" <%= music.instru_vocal === 'vocal' ? 'selected' : '' %>>Vocal</option>
            <option value="instrumental e Vocal" <%= music.instru_vocal === 'instrumental e Vocal' ? 'selected' : '' %>>Instrumental & Vocal</option>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Editar</button>
</form>
