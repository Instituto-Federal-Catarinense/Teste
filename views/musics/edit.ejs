<h1>Edit Music</h1>
<form action="/musics/<%= music.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= music.nome %>" required>
    </div>
    <div class="form-group">
        <label for="password">Senha</label>
        <input type="password" class="form-control" id="senha" name="senha" value="<%= music.senha %>" required>
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <select class="form-control" id="role" name="role" required>
            <option value="admin" <%= music.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
</form>
